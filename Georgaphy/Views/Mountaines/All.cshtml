@model List<AddMounainrViewModel>

@{
    ViewBag.Title = "All Mountines";
}

<div class="text-center">
    <a class="navbar-brand" asp-area="" asp-controller="Mountaines" asp-action="Add"><h5>Add new Mountine</h5></a>
</div>
<div class="text-center">
    <h2>@ViewBag.Title</h2>
</div>

<div class="text row">
    @foreach (var high in Model)
    {
        <div class="card-body">
            <h5 class="card-title mt-1">@high.Name</h5>
            <p class="mb-0">Land: @high.Area</p>
            <p>Continent: @high.Continent</p>
            <p>Country: @high.Country</p>
            <form class="input-group-sm" asp-route-mountainName="@high.Name" asp-controller="Mountaines" asp-action="VisitMountain" method="post">
                <input type="submit" value="Visited this Mountine" class="fs-6 btn btn-warning mb-3 p-2" />
            </form>
        </div>
    }
</div>