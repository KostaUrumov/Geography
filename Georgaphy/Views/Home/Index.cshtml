@using GeographyCore.ViewModels.ContinentModels
@model List<HomePageContinentViewModel>

@{
    ViewData["Title"] = "Home Page";
    var continent = Model.ToList();
}

<div class="mb-5"></div>

<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">

        @for (int i = 0; i < continent.Count(); i++)
        {
            var house = continent[i];
            <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                <div class="text-center">
                    <a> @house.Name </a>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <form class="input-group-sm" asp-route-continentName=@house.Name asp-controller="Cities" asp-action="AllInGivenContinent" method="post">
                            <input type="submit" value="Cities" class="fs-6 btn btn-info mb-3 p-2" />
                        </form>

                        <form class="input-group-sm" asp-route-continentName=@house.Name asp-controller="Mountaines" asp-action="AllInGivenContinent" method="post">
                            <input type="submit" value="Mountains" class="fs-6 btn btn-info mb-3 p-2" />
                        </form>

                        <form class="input-group-sm" asp-route-continentName=@house.Name asp-controller="Rivers" asp-action="AllInGivenContinent" method="post">
                            <input type="submit" value="Rivers" class="fs-6 btn btn-info mb-3 p-2" />
                        </form>
                    }
                    <img class="d-block w-100" style="height:500px"
                         src="@house.PctureUrl">
                </div>
            </div>
        }

    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>