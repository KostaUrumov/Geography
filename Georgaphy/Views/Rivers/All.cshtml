@model List<AddRiverViewModel>

@{
    ViewBag.Title = "All Rivers";
}

@if (this.User.IsInRole("Admin"))
{
    <div class="text-center">
        <a class="navbar-brand" asp-area="" asp-controller="Rivers" asp-action="Add"><h5>Add new River</h5></a>
    </div>
}
<div class="text-center">
    <h2>@ViewBag.Title</h2>
</div>

<div class="text row">
    @foreach (var river in Model)
    {
        <div class="card-body">
            <h5 class="card-title mt-1">@river.Name</h5>
            <p class="mb-0">Length: @river.Length</p>
            <p>Continent: @river.Continent</p>
            <p>Country of origin: @river.Country</p>
            <form class="input-group-sm" asp-route-riverName="@river.Name" asp-controller="Rivers" asp-action="VisitRiver" method="post">
                <input type="submit" value="Visited this River" class="fs-6 btn btn-primary mb-3 p-2" />
            </form>
        </div>
    }
</div>