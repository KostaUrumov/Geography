@model SearchViewModel

@{
    ViewBag.Title = "Search for...";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="mb-3">
                <label asp-for="@Model.listed" class="form-label">What Object are you searching for?</label>
                <select asp-for="@Model.listed" class="form-control">

                    @for (int i = 0; i < Model.listed.Count(); i++)
                    {
                        <option value="@Model.listed[i]">@Model.listed[i]</option>
                    }
                </select>
                <span asp-validation-for="SelectionOfTheList" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Find" class="form-label">Name of the Object</label>
                <input asp-for="@Model.Find" class="form-control" aria-required="true" />
                <span asp-validation-for="Find" class="text-danger"></span>
            </div>
           
            
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Search" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}