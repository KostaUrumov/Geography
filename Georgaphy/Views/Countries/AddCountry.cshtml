@using GeographyCore.ViewModels.CountryModels;
@model AddCountryViewModel


@{
    ViewBag.Title = "Add Country";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label">Name of the country</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Area" class="form-label">Area in km2</label>
                <input asp-for="@Model.Area" class="form-control" aria-required="true" />
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Population" class="form-label">Population in millions</label>
                <input asp-for="@Model.Population" class="form-control" aria-required="true" />
                <span asp-validation-for="Population" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.RoadsKm" class="form-label">Roads km</label>
                <input asp-for="@Model.RoadsKm" class="form-control" value="" />
                <span asp-validation-for="RoadsKm" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.FlagUrl" class="form-label">Flag (Url Link)</label>
                <input asp-for="@Model.FlagUrl" class="form-control" value="" />
                <span asp-validation-for="FlagUrl" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ContinentId" class="form-label">Continent</label>
                <select asp-for="@Model.ContinentId" class="form-control">
                    @foreach (var genre in Model.Continents)
                    {
                        <option value="@genre.Id">@genre.Name</option>
                    }
                </select>
                <span asp-validation-for="ContinentId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}